<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tianji.dam.mapper.TaskCarRecordMapper">

    <resultMap type="com.tianji.dam.domain.TaskCarRecord" id="TaskCarRecordResult">
        <result property="id" column="id"/>
        <result property="carId" column="car_id"/>
        <result property="taskId" column="task_id"/>
        <result property="joinTime" column="join_time"/>
        <result property="awayTime" column="away_time"/>
        <result property="status" column="status"/>
        <result property="freedom1" column="freedom1"/>
        <result property="freedom2" column="freedom2"/>
        <result property="freedom3" column="freedom3"/>
        <result property="freedom4" column="freedom4"/>
        <result property="freedom5" column="freedom5"/>
    </resultMap>

    <sql id="selectTaskCarRecordVo">
        select id, car_id, task_id, join_time, away_time, status, freedom1, freedom2, freedom3, freedom4, freedom5 from
        t_task_car_record
    </sql>

    <select id="selectTaskCarRecordList" parameterType="com.tianji.dam.domain.TaskCarRecord"
            resultMap="TaskCarRecordResult">
        <include refid="selectTaskCarRecordVo"/>
        <where>
            <if test="carId != null ">and car_id = #{carId}</if>
            <if test="taskId != null ">and task_id = #{taskId}</if>
            <if test="joinTime != null ">and join_time = #{joinTime}</if>
            <if test="awayTime != null ">and away_time = #{awayTime}</if>
            <if test="status != null ">and status = #{status}</if>
        </where>
    </select>

    <select id="selectTaskCarRecordById" parameterType="Long" resultMap="TaskCarRecordResult">
        <include refid="selectTaskCarRecordVo"/>
        where id = #{id}
        order by create_time desc limit 1
    </select>

    <insert id="insertTaskCarRecord" parameterType="com.tianji.dam.domain.TaskCarRecord">
        insert into t_task_car_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="carId != null">car_id,</if>
            <if test="taskId != null">task_id,</if>
            <if test="joinTime != null">join_time,</if>
            <if test="awayTime != null">away_time,</if>
            <if test="status != null">status,</if>
            <if test="freedom1 != null">freedom1,</if>
            <if test="freedom2 != null">freedom2,</if>
            <if test="freedom3 != null">freedom3,</if>
            <if test="freedom4 != null">freedom4,</if>
            <if test="freedom5 != null">freedom5</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="carId != null">#{carId},</if>
            <if test="taskId != null">#{taskId},</if>
            <if test="joinTime != null">#{joinTime},</if>
            <if test="awayTime != null">#{awayTime},</if>
            <if test="status != null">#{status},</if>
            <if test="freedom1 != null">#{freedom1},</if>
            <if test="freedom2 != null">#{freedom2},</if>
            <if test="freedom3 != null">#{freedom3},</if>
            <if test="freedom4 != null">#{freedom4},</if>
            <if test="freedom5 != null">#{freedom5}</if>
        </trim>
    </insert>

    <update id="updateTaskCarRecord" parameterType="com.tianji.dam.domain.TaskCarRecord">
        update t_task_car_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="carId != null">car_id = #{carId},</if>
            <if test="taskId != null">task_id = #{taskId},</if>
            <if test="joinTime != null">join_time = #{joinTime},</if>
            <if test="awayTime != null">away_time = #{awayTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="freedom1 != null">freedom1 = #{freedom1},</if>
            <if test="freedom2 != null">freedom2 = #{freedom2},</if>
            <if test="freedom3 != null">freedom3 = #{freedom3},</if>
            <if test="freedom4 != null">freedom4 = #{freedom4},</if>
            <if test="freedom5 != null">freedom5 = #{freedom5}</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTaskCarRecordById" parameterType="Long">
        delete from t_task_car_record where id = #{id}
    </delete>

    <delete id="deleteTaskCarRecordByIds" parameterType="String">
        delete from t_task_car_record where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <delete id="delectByCarId">
        delete from t_task_car_record where car_id = #{carId}
    </delete>
</mapper>